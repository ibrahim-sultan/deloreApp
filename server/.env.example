# Database Configuration
MONGODB_URI=mongodb://localhost:27017/delore

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# Optional: separate TTLs for review links/session
REVIEW_LINK_TTL_SECONDS=3600
REVIEW_SESSION_TTL_SECONDS=3600
# Optional: maximum allowed link TTL (seconds)
REVIEW_MAX_LINK_TTL_SECONDS=604800
# Optional: public base URL used to construct links (falls back to CLIENT_BASE_URL)
PUBLIC_BASE_URL=http://localhost:5000

# Server Configuration
PORT=5000

# Environment
NODE_ENV=development

# Email (for password reset and notifications)
# If using Gmail, you must use an App Password
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-app-password

# Client base URL for password reset link (frontend)
# Example for local dev: http://localhost:3000
CLIENT_BASE_URL=http://localhost:3000
